<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omdbtv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="35" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <permission
        android:name="com.example.omdbtv.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.omdbtv.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:banner="@drawable/banner"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.OMDBTV" >
        <activity
            android:name="com.example.omdbtv.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.OMDBTV.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.omdbtv.ui.detail.MovieDetailActivity"
            android:theme="@style/Theme.OMDBTV.NoActionBar" />
        <activity
            android:name="com.example.omdbtv.ui.search.SearchActivity"
            android:theme="@style/Theme.OMDBTV.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.omdbtv.ui.search.SearchResultsActivity"
            android:theme="@style/Theme.OMDBTV.NoActionBar" />
        <activity
            android:name="com.example.omdbtv.ui.genres.GenresActivity"
            android:theme="@style/Theme.OMDBTV.NoActionBar" />
        <activity
            android:name="com.example.omdbtv.ui.search.SearchResultsActivity"
            android:theme="@style/Theme.OMDBTV.NoActionBar" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.omdbtv.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>